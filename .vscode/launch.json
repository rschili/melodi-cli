    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program (global workspace)",
            "console": "externalTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/index.mjs",
            "outFiles": [
                "${workspaceFolder}/**/*.js",
                "${workspaceFolder}/**/*.mjs"
            ],
            "outputCapture": "std",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch (local test workspace)",
            "console": "externalTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/index.mjs",
            "outFiles": [
                "${workspaceFolder}/**/*.js",
                "${workspaceFolder}/**/*.mjs"
                
            ],
            "outputCapture": "std",
            "env": {
                "MELODI_ROOT": "${workspaceFolder}/workspace"
            }
        }
    ]
}